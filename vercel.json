{
  "version": 2,
  "builds": [
    {
      "src": "public/**/*.html",
      "use": "@vercel/static"
    },
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/login",
      "dest": "/server.js",
      "methods": ["POST"]
    },
    {
      "src": "/submit-code",
      "dest": "/server.js",
      "methods": ["POST"]
    },
    {
      "src": "/verify-clue",
      "dest": "/server.js",
      "methods": ["POST"]
    },
    {
      "src": "/dashboard",
      "dest": "/public/dashboard.html",
      "status": 200
    },
    {
      "src": "/admin",
      "dest": "/public/admin.html",
      "status": 200
    },
    {
      "src": "/map",
      "dest": "/public/map.html",
      "status": 200
    },
    {
      "src": "/(.*)",
      "dest": "/public/index.html",
      "status": 200
    }
  ],
  "rewrites": [
    {
      "source": "/dashboard.html",
      "destination": "/dashboard"
    },
    {
      "source": "/admin.html",
      "destination": "/admin"
    },
    {
      "source": "/map.html",
      "destination": "/map"
    }
  ]
}
